block content
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header Edición del Medico
    .row
      .col-lg-12
        .panel.panel-default
          .panel-heading  #{header}
          .panel-body
            .row
              .col-lg-6
                form(action="/editmedico" method="POST" enctype="appplication/json")
                  .form-group
                    label Nombre
                    input(class="form-control", name="nombre", value='#{nombre}')
                  .form-group
                    label Apellido Paterno
                    input(class="form-control", name="apellidopaterno", value='#{apellido_paterno}')
                  .form-group
                    label Apellido Materno
                    input(class="form-control", name="apellidomaterno", value='#{apellido_materno}')
                  .form-group
                    label Especialidad
                    input(class="form-control", name="especialidad", value='#{especialidad}')
                  .form-group
                    label Cédula Profesional
                    input(class="form-control", name="cedula", value='#{cedula_profesional}')
                  .form-group
                    button.btn.btn-default(type="submit") Submit
